{
    "compilerOptions": {
      "target": "es6",
      "module": "esnext",
      "lib": ["ESNext"],
      "moduleResolution": "node",
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "types": ["node", "vitest/importMeta"]

    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "**/*.spec.ts"]
  }